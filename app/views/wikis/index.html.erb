<div class="container">
    <h1>Samipedia</h1>
    <div class="col-md-4">
        <%= link_to "New Sam-Wiki", new_wiki_path, class: 'btn btn-success' %>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h3>Private Posts</h3>
            <% @wikis.each do |wiki| %>
                <% if wiki.private? && (current_user.admin? || (current_user.premium? && current_user == wiki.user)) %>
                    <div class="media">
                        <div class="media-body">
                            <h4 class="media-hearing">
                                <%= link_to wiki.title, wiki %>
                            </h4>
                        </div>
                    </div>
                <% end %>
            <% end %>
            <h3>Public Posts</h3>
            <% @wikis.each do |wiki| %>
                <% if wiki.private == false %>
                    <div class="media">
                        <div class="media-body">
                            <h4 class="media-hearing">
                                <%= link_to wiki.title, wiki %>
                            </h4>
                        </div>
                    </div>                    
                <% end %>
            <% end %>
        </div>
    </div>
</div>