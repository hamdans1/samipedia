<div class="container">
    <h1>New SamWiki</h1>
    
    <div class="row">
        <div class="col-md-4">
            <p>SamWiki Rules</p>
            <ul>
                <li>Just the facts please</li>
                <li>No advertisements</li>
            </ul>
        </div>
        <div class="col-md-8">
            <%= form_for @wiki do |f| %>
                <div class="form-group">
                    <%= f.label :title %>
                    <%= f.text_field :title, class: 'form-control', placeholder: "Enter SamWiki title" %>
                </div>
                <div class="form-group">
                    <%= f.label :body %>
                    <%= f.text_area :body, rows: 6, class: "form-control", placeholder: "Enter SamWiki body" %>
                </div>
                <div class="form-group">
                    <%= f.submit "Save", class: "btn btn-success" %>
                </div>
                <% end %>
        </div>
    </div>
</div>